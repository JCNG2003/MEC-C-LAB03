    private Timer t;
    private int h, m, s;
    private ActionListener acciones = new ActionListener() { //clase anonima
        @Override
        public void actionPerformed(ActionEvent ae) {
            s++;
            if (s == 60) {
                s = 0;
                ++m;
            }
            if (m == 60) {
                m = 0;
                ++h;
            }
            actualizarLabel();
        }
    };
    
    private void actualizarLabel(){
        String tiempo = (h<=9?"0":"")+h+":"+(m<=9?"0":"")+m+":"+(s<=9?"0":"")+s; //apli operador terneario
        jLabelTempo01.setText(tiempo);
    }
    private void jButtonInicio01ActionPerformed(java.awt.event.ActionEvent evt) {                                                
        t.start();
        jButtonInicio01.setEnabled(false);
        jButtonInicio01.setText("Reanudar");
        jButtonPausa01.setEnabled(true);
        jButtonDetener01.setEnabled(true);
    }                                               

    private void jButtonPausa01ActionPerformed(java.awt.event.ActionEvent evt) {                                               
        t.stop();
        jButtonInicio01.setEnabled(true);
        jButtonPausa01.setEnabled(false);
    }                                              

    private void jButtonDetener01ActionPerformed(java.awt.event.ActionEvent evt) {                                                 
        if(t.isRunning())
        {
            t.stop();
            jButtonInicio01.setEnabled(true);
        }
        jButtonInicio01.setText("Iniciar");
        jButtonPausa01.setEnabled(false);
        jButtonDetener01.setEnabled(false);
        h=0; m=0; s=0; 
        actualizarLabel();
    }                                                

    private void Temporizador01ActionPerformed(java.awt.event.ActionEvent evt) {                                               
        // TODO add your handling code here:
        Temporizador.Principal.VentanaPrincipal a = new VentanaPrincipal();
        a.setVisible(true);
        
    }                                              

